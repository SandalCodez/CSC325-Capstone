<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.MainPortfolioController">

   <ImageView fx:id="bgImageView" preserveRatio="false">
      <image>
         <Image url="@images/defbackground.png" />
      </image>
   </ImageView>

      <Button layoutX="125.0" layoutY="72.0" mnemonicParsing="false" onAction="#handleToSignOut" prefHeight="25.0" prefWidth="84.0" text="Sign out" />

      <Button layoutX="14.0" layoutY="72.0" mnemonicParsing="false" onAction="#handleBackToLogIn" prefHeight="25.0" prefWidth="84.0" text="Exit" />

      <Button fx:id="addFundsButton" layoutX="466.0" layoutY="30.0" mnemonicParsing="false" onAction="#handleAddFunds" prefHeight="25.0" prefWidth="84.0" text="Add Funds" />

      <TextArea layoutX="40.0" layoutY="117.0" prefHeight="59.0" prefWidth="200.0" text="Snapshot - overall account value&#10;Daily / all time pnl&#10;Notabe assets held" />

      <TextArea fx:id="chatArea" editable="false" layoutX="366.0" layoutY="190.0" prefHeight="59.0" prefWidth="200.0" promptText="Chat Field" />

      <TextArea fx:id="marketNewsArea" layoutX="366.0" layoutY="117.0" prefHeight="59.0" prefWidth="200.0" text="Market news" />

      <TableView fx:id="portfolioTable" layoutX="40.0" layoutY="259.0" prefHeight="127.0" prefWidth="526.0">
         <columns>
            <TableColumn fx:id="tickerColumn" prefWidth="75.0" text="Ticker" />
            <TableColumn fx:id="companyColumn" prefWidth="100.0" text="Company" />
            <TableColumn fx:id="sharesColumn" prefWidth="75.0" text="Shares" />
            <TableColumn fx:id="avgBuyColumn" prefWidth="75.0" text="Avg Buy" />
            <TableColumn fx:id="currentPriceColumn" prefWidth="90.0" text="Current Price" />
            <TableColumn fx:id="unrealizedGainColumn" prefWidth="90.0" text="Unrealized Gain" />
            <TableColumn fx:id="totalValueColumn" prefWidth="90.0" text="Total Value" />
         </columns>
      </TableView>

      <TextField alignment="TOP_CENTER" layoutX="228.0" layoutY="19.0" prefHeight="77.0" prefWidth="152.0" text="!Bears">
         <font>
            <Font size="36.0" />
         </font>
      </TextField>
      <TextField fx:id="userInput" layoutX="40.0" layoutY="190.0" prefHeight="59.0" prefWidth="200.0" promptText="Ask ChatGPT" />
      <Button fx:id="sendBtn" layoutX="173.0" layoutY="207.0" mnemonicParsing="false" onAction="#onSend" text="Send" />
      <HBox layoutX="27.0" layoutY="21.0" prefHeight="42.0" prefWidth="168.0">
         <children>
            <Label text="Balance: " textFill="WHITE" />
            <Label fx:id="balanceLabel" textFill="WHITE" />
         </children>
      </HBox>
      <Button fx:id="StockSearchButton" layoutX="466.0" layoutY="72.0" mnemonicParsing="false" onAction="#handleToStockScreen" prefHeight="25.0" prefWidth="84.0" text="Stock Search" />
   </children>
</AnchorPane>

   <Group fx:id="scalingPane" scaleX="0.5" scaleY="0.5">
      <BorderPane prefHeight="800.0" prefWidth="1200.0">
         <top>
            <HBox prefHeight="42.0" prefWidth="168.0">
               <children>
                  <Label prefHeight="237.0" prefWidth="76.0" text="Balance: " textFill="#39ff43">
                     <padding><Insets top="12.0" /></padding>
                     <font><Font name="System Bold" size="18.0" /></font>
                  </Label>
                  <Button fx:id="addFundsButton" mnemonicParsing="false" onAction="#handleAddFunds" prefHeight="41.0" prefWidth="142.0" style="-fx-background-color: #45CC2D; -fx-border-color: #91f77e; -fx-border-radius: 50; -fx-background-radius: 50;" text="Add Funds" textFill="WHITE">
                     <HBox.margin><Insets left="3.0" right="8.0" /></HBox.margin>
                     <effect><DropShadow spread="0.15"><color><Color red="0.568" green="0.968" blue="0.494" /></color></DropShadow></effect>
                  </Button>
                  <TextField fx:id="StockSearchField" alignment="CENTER" onAction="#handleEnter" onMouseClicked="#clearStockSearch" prefHeight="41.0" prefWidth="142.0" style="-fx-background-color: #45CC2D; -fx-border-color: #91f77e; -fx-border-radius: 50; -fx-background-radius: 50; -fx-text-fill: #ffffff;" text="Stock Search">
                     <HBox.margin><Insets left="8.0" right="8.0" /></HBox.margin>
                     <effect><DropShadow spread="0.15"><color><Color red="0.568" green="0.968" blue="0.494" /></color></DropShadow></effect>
                  </TextField>
                  <Label fx:id="balanceLabel" textFill="WHITE">
                     <padding><Insets top="12.0" /></padding>
                     <font><Font name="System Bold Italic" size="18.0" /></font>
                  </Label>
                  <Label fx:id="space1" prefHeight="39.0" prefWidth="19.0" textFill="WHITE">
                     <padding><Insets top="12.0" /></padding>
                     <font><Font name="System Bold Italic" size="18.0" /></font>
                  </Label>
                  <ImageView fitHeight="177.0" fitWidth="417.0" pickOnBounds="true" preserveRatio="true">
                     <image><Image url="@images/!bearsLogo.png" /></image>
                  </ImageView>
                  <Label fx:id="space2" prefHeight="39.0" prefWidth="34.0" textFill="WHITE">
                     <padding><Insets top="12.0" /></padding>
                     <font><Font name="System Bold Italic" size="18.0" /></font>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#handleBackToLogIn" prefHeight="41.0" prefWidth="142.0" style="-fx-background-color: #45CC2D; -fx-border-color: #91f77e; -fx-border-radius: 50; -fx-background-radius: 50;" text="Exit" textFill="WHITE" wrapText="true">
                     <HBox.margin><Insets right="8.0" /></HBox.margin>
                     <effect><DropShadow spread="0.15"><color><Color red="0.568" green="0.968" blue="0.494" /></color></DropShadow></effect>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleToSignOut" prefHeight="41.0" prefWidth="136.0" style="-fx-border-color: #91f77e; -fx-border-radius: 50; -fx-background-color: #45CC2D; -fx-background-radius: 50;" text="Sign out" textFill="WHITE">
                     <effect><DropShadow spread="0.15"><color><Color red="0.568" green="0.968" blue="0.494" /></color></DropShadow></effect>
                  </Button>
               </children>
            </HBox>
         </top>
         <left>
            <VBox prefHeight="442.0" prefWidth="230.0" spacing="8.0" BorderPane.alignment="CENTER_LEFT">
               <children>
                  <VBox prefHeight="452.0" prefWidth="228.0" style="-fx-border-color: #45CC2D; -fx-border-radius: 10; -fx-padding: 8; -fx-background-radius: 10; -fx-background-color: #23272f;">
                     <children>
                        <Label text="Market News" textFill="#4f8cff">
                           <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        <TextArea fx:id="marketNewsArea" editable="false" prefHeight="319.0" prefWidth="168.0" wrapText="true" VBox.vgrow="ALWAYS" />
                     </children>
                     <effect><DropShadow spread="0.15"><color><Color red="0.568" green="0.968" blue="0.494" /></color></DropShadow></effect>
                     <VBox.margin><Insets left="5.0" right="5.0" /></VBox.margin>
                  </VBox>
               </children>
               <BorderPane.margin><Insets bottom="15.0" /></BorderPane.margin>
            </VBox>
         </left>
         <center>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <VBox style="-fx-border-color: #45CC2D; -fx-border-radius: 10; -fx-padding: 8; -fx-background-radius: 10; -fx-background-color: #23272f;">
                     <children>
                        <Label text="Snapshot" textFill="#4f8cff">
                           <font><Font name="System Bold" size="14.0" /></font>
                           <VBox.margin><Insets left="5.0" /></VBox.margin>
                        </Label>
                        <TextArea prefHeight="362.0" prefWidth="667.0" text="Snapshot - overall account value&#10;Daily / all time pnl&#10;Notabe assets held" VBox.vgrow="ALWAYS">
                           <VBox.margin><Insets /></VBox.margin>
                        </TextArea>
                     </children>
                     <effect><DropShadow><color><Color red="0.568" green="0.968" blue="0.494" /></color></DropShadow></effect>
                  </VBox>
               </children>
               <padding><Insets bottom="15.0" /></padding>
            </VBox>
         </center>
         <right>
            <VBox maxHeight="Infinity" maxWidth="Infinity" BorderPane.alignment="CENTER">
               <children>
                  <VBox maxHeight="Infinity" maxWidth="Infinity" prefHeight="336.0" prefWidth="259.0" spacing="6.0" style="-fx-background-color: #23272f; -fx-border-color: #45CC2D; -fx-border-radius: 10; -fx-padding: 8; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                     <children>
                        <Label style="-fx-text-fill: #4f8cff;" text="Ask ChatGPT">
                           <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        <ScrollPane VBox.vgrow="ALWAYS">
                           <content><VBox fx:id="chatHistoryBox" spacing="5.0" /></content>
                        </ScrollPane>
                        <HBox prefWidth="197.0" spacing="5.0" VBox.vgrow="ALWAYS">
                           <children>
                              <TextField fx:id="userInput" onAction="#onSend" prefWidth="142.0" promptText="Have a question?" HBox.hgrow="ALWAYS" />
                              <Button fx:id="sendBtn" mnemonicParsing="false" onAction="#onSend" style="-fx-background-color: #4f8cff; -fx-border-radius: 50; -fx-background-radius: 50;" text="Send" textFill="WHITE">
                                 <effect><DropShadow spread="0.4"><color><Color red="0.014" green="0.113" blue="1.0" /></color></DropShadow></effect>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                     <VBox.margin><Insets bottom="15.0" left="5.0" right="5.0" /></VBox.margin>
                     <effect><DropShadow><color><Color red="0.568" green="0.968" blue="0.494" /></color></DropShadow></effect>
                  </VBox>
               </children>
            </VBox>
         </right>
         <bottom>
            <TableView fx:id="portfolioTable" prefHeight="203.0" prefWidth="800.0" style="-fx-background-color: #23272f; -fx-background-radius: 1;" BorderPane.alignment="CENTER">
               <columns>
                  <TableColumn fx:id="tickerColumn" prefWidth="75.0" text="Ticker" />
                  <TableColumn fx:id="companyColumn" prefWidth="100.0" text="Company" />
                  <TableColumn fx:id="sharesColumn" prefWidth="75.0" text="Shares" />
                  <TableColumn fx:id="avgBuyColumn" prefWidth="75.0" text="Avg Buy" />
                  <TableColumn fx:id="currentPriceColumn" prefWidth="90.0" text="Current Price" />
                  <TableColumn fx:id="unrealizedGainColumn" prefWidth="99.0" text="Unrealized Gain" />
                  <TableColumn fx:id="totalValueColumn" prefWidth="81.0" text="Total Value" />
               </columns>
               <effect><DropShadow spread="0.44"><color><Color red="0.568" green="0.968" blue="0.494" /></color></DropShadow></effect>
               <BorderPane.margin><Insets bottom="5.0" left="5.0" right="5.0" /></BorderPane.margin>
            </TableView>
         </bottom>
      </BorderPane>
   </Group>
</StackPane>
