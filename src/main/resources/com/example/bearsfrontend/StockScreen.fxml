<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.Group?>

<StackPane fx:id="rootPane" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.StockScreenController">

   <ImageView fx:id="bgImageView" preserveRatio="false">
      <image>
         <Image url="@images/defbackground.png" />
      </image>
   </ImageView>

   <Group fx:id="scalingPane" scaleX="0.5" scaleY="0.5">
      <AnchorPane fx:id="mainPane" layoutX="284.0" layoutY="230.0" prefHeight="800.0" prefWidth="1210.0">
         <children>
            <Button fx:id="buyButton" layoutX="866.0" layoutY="120.0" onAction="#handleBuyButtonClick" prefHeight="28.0" prefWidth="126.0" style="-fx-background-color: #45CC2D; -fx-border-color: #91f77e; -fx-background-radius: 50; -fx-border-radius: 50; -fx-text-fill: white;" text="Buy">
               <effect>
                  <DropShadow>
                     <color>
                        <Color red="0.5686274766921997" green="0.9686274528503418" blue="0.4941176474094391" />
                     </color>
                  </DropShadow>
               </effect>
            </Button>

            <Button fx:id="sellButton" layoutX="1001.0" layoutY="120.0" onAction="#handleSellButtonClick" prefHeight="28.0" prefWidth="126.0" style="-fx-background-color: #45CC2D; -fx-border-color: #91f77e; -fx-border-radius: 50; -fx-background-radius: 50; -fx-text-fill: white;" text="Sell">
               <effect>
                  <DropShadow>
                     <color>
                        <Color red="0.5686274766921997" green="0.9686274528503418" blue="0.4941176474094391" />
                     </color>
                  </DropShadow>
               </effect>
            </Button>

            <Button fx:id="backToPortfolioButton" layoutX="866.0" layoutY="69.0" onAction="#handleBackToMainPortfolio" prefHeight="41.0" prefWidth="265.0" style="-fx-background-color: #45CC2D; -fx-border-color: #91f77e; -fx-border-radius: 50; -fx-background-radius: 50; -fx-text-fill: white;" text="Back to Portfolio Overview">
               <effect>
                  <DropShadow>
                     <color>
                        <Color red="0.5686274766921997" green="0.9686274528503418" blue="0.4941176474094391" />
                     </color>
                  </DropShadow>
               </effect>
            </Button>

            <Button fx:id="searchButton" layoutX="279.0" layoutY="87.0" onAction="#handleSearch" prefHeight="41.0" prefWidth="96.0" style="-fx-background-color: #45CC2D; -fx-border-color: #91f77e; -fx-background-radius: 50; -fx-border-radius: 50; -fx-text-fill: white;" text="Search">
               <effect>
                  <DropShadow>
                     <color>
                        <Color red="0.5686274766921997" green="0.9686274528503418" blue="0.4941176474094391" />
                     </color>
                  </DropShadow>
               </effect>
            </Button>

            <TextField fx:id="tickerInputField" alignment="CENTER" layoutX="51.0" layoutY="87.0" prefHeight="41.0" prefWidth="215.0" promptText="Input Ticker" style="-fx-background-color: #45CC2D; -fx-border-color: #91f77e; -fx-border-radius: 50; -fx-background-radius: 50; -fx-prompt-text-fill: #ffffff; -fx-text-fill: #ffffff;">
               <effect>
                  <DropShadow>
                     <color>
                        <Color red="0.5686274766921997" green="0.9686274528503418" blue="0.4941176474094391" />
                     </color>
                  </DropShadow>
               </effect>
            </TextField>

            <!-- Company News Section -->
            <VBox layoutX="616.0" layoutY="201.0" prefHeight="284.0" prefWidth="578.0" style="-fx-border-color: #45CC2D; -fx-border-radius: 10; -fx-padding: 8; -fx-background-radius: 10; -fx-background-color: #23272f;">
               <children>
                  <Label text="Company News" textFill="#4f8cff">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="companyNewsTextArea" editable="false" prefHeight="242.0" prefWidth="536.0" wrapText="true" VBox.vgrow="ALWAYS" />
               </children>
               <effect>
                  <DropShadow spread="0.15">
                     <color>
                        <Color red="0.568" green="0.968" blue="0.494" />
                     </color>
                  </DropShadow>
               </effect>
            </VBox>

            <!-- Logo Image -->
            <ImageView fitHeight="170.0" fitWidth="424.0" layoutX="413.0" layoutY="19.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/!bearsLogo.png" />
               </image>
            </ImageView>

            <!-- Chat Section -->
            <VBox layoutX="615.0" layoutY="492.0" maxHeight="Infinity" maxWidth="Infinity" prefHeight="295.0" prefWidth="576.0" spacing="6.0" style="-fx-background-color: #23272f; -fx-border-color: #45CC2D; -fx-border-radius: 10; -fx-padding: 8; -fx-background-radius: 10;">
               <children>
                  <Label style="-fx-text-fill: #4f8cff;" text="Ask ChatGPT">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <ScrollPane VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="chatHistoryBox" spacing="5.0" />
                     </content>
                  </ScrollPane>
                  <HBox prefHeight="175.0" prefWidth="622.0" spacing="5.0" VBox.vgrow="ALWAYS">
                     <children>
                        <TextField fx:id="userInput" onAction="#onSend" prefWidth="142.0" promptText="Have a question?" HBox.hgrow="ALWAYS" />
                        <Button fx:id="sendBtn" mnemonicParsing="false" onAction="#onSend" style="-fx-background-color: #4f8cff; -fx-border-radius: 50; -fx-background-radius: 50; -fx-text-fill: white;" text="Send">
                           <effect>
                              <DropShadow spread="0.4">
                                 <color>
                                    <Color red="0.014" green="0.113" blue="1.0" />
                                 </color>
                              </DropShadow>
                           </effect>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <effect>
                  <DropShadow>
                     <color>
                        <Color red="0.568" green="0.968" blue="0.494" />
                     </color>
                  </DropShadow>
               </effect>
            </VBox>

            <!-- Stock Information Panel -->
            <VBox layoutX="20.0" layoutY="200.0" prefHeight="588.0" prefWidth="579.0" style="-fx-background-color: #23272f; -fx-border-color: #45CC2D; -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 8;">
               <children>
                  <!-- Company Information Section -->
                  <VBox prefHeight="180.0" prefWidth="223.0" spacing="5.0">
                     <children>
                        <Label text="Company Information" textFill="#4f8cff">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <HBox prefHeight="19.0" prefWidth="223.0">
                           <children>
                              <Label text="Ticker: " textFill="white" />
                              <Label fx:id="tickerLabel" textFill="white" />
                           </children>
                        </HBox>
                        <HBox prefHeight="19.0" prefWidth="223.0">
                           <children>
                              <Label text="Company Name: " textFill="white" />
                              <Label fx:id="companyNameLabel" textFill="white" />
                           </children>
                        </HBox>
                        <HBox prefHeight="19.0" prefWidth="223.0">
                           <children>
                              <Label text="Current Price: " textFill="white" />
                              <Label fx:id="currentPriceLabel" textFill="white" />
                           </children>
                        </HBox>
                        <HBox prefHeight="19.0" prefWidth="223.0">
                           <children>
                              <Label text="Industry: " textFill="white" />
                              <Label fx:id="industryLabel" textFill="white" />
                           </children>
                        </HBox>
                        <HBox prefHeight="19.0" prefWidth="223.0">
                           <children>
                              <Label text="Market Cap: " textFill="white" />
                              <Label fx:id="marketCapLabel" textFill="white" />
                           </children>
                        </HBox>
                        <HBox prefHeight="19.0" prefWidth="223.0">
                           <children>
                              <Label text="Shares Outstanding: " textFill="white" />
                              <Label fx:id="sharesOutstandingLabel" textFill="white" />
                           </children>
                        </HBox>
                        <HBox prefHeight="19.0" prefWidth="223.0">
                           <children>
                              <Label text="Available Balance: " textFill="white" />
                              <Label fx:id="balanceLabel" textFill="white" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Portfolio Holdings Section -->
                  <VBox prefHeight="200.0" prefWidth="223.0" spacing="5.0">
                     <children>
                        <Label text="Current Holdings" textFill="#4f8cff">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <HBox prefHeight="19.0" prefWidth="223.0">
                           <children>
                              <Label text="Number of Shares: " textFill="white" />
                              <Label fx:id="numberOfSharesLabel" textFill="white" />
                           </children>
                        </HBox>
                        <HBox prefHeight="19.0" prefWidth="223.0">
                           <children>
                              <Label text="Average Buy Price: " textFill="white" />
                              <Label fx:id="averageBuyPriceLabel" textFill="white" />
                           </children>
                        </HBox>
                        <HBox prefHeight="19.0" prefWidth="223.0">
                           <children>
                              <Label text="Total Value: " textFill="white" />
                              <Label fx:id="totalValueLabel" textFill="white" />
                           </children>
                        </HBox>
                        <HBox prefHeight="19.0" prefWidth="223.0">
                           <children>
                              <Label text="Unrealized Gain/Loss: " textFill="white" />
                              <Label fx:id="gainLossLabel" textFill="white" />
                           </children>
                        </HBox>
                        <HBox prefHeight="19.0" prefWidth="223.0">
                           <children>
                              <Label text="Profit/Loss %: " textFill="white" />
                              <Label fx:id="profitLossLabel" textFill="white" />
                           </children>
                        </HBox>
                        <HBox prefHeight="19.0" prefWidth="223.0">
                           <children>
                              <Label text="/ of Portfolio: " textFill="white" />
                              <Label fx:id="percentOfPortfolioLabel" textFill="white" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <effect>
                  <DropShadow>
                     <color>
                        <Color red="0.5686274766921997" green="0.9686274528503418" blue="0.4941176474094391" />
                     </color>
                  </DropShadow>
               </effect>
            </VBox>
         </children>
      </AnchorPane>
   </Group>
</StackPane>