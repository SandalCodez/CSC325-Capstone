<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="rootPane" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.SignInController">

   <ImageView fx:id="bgImageView" preserveRatio="false">
      <image>
         <Image url="@images/defbackground.png" />
      </image>
   </ImageView>

   <Group fx:id="scalingPane">
      <AnchorPane prefHeight="800.0" prefWidth="1200.0">

         <ImageView fitHeight="228.0" fitWidth="415.0" layoutX="393.0" layoutY="118.0" preserveRatio="true">
            <image>
               <Image url="@images/!bearsLogo.png" />
            </image>
         </ImageView>

         <TextField fx:id="usernameField" layoutX="475.0" layoutY="340.0" onAction="#handleSubmit" onMouseClicked="#clearUsername" prefHeight="50.0" prefWidth="250.0" promptText="Username">
            <font><Font size="18.0" /></font>
         </TextField>

         <PasswordField fx:id="passwordField" layoutX="476.0" layoutY="400.0" onAction="#handleSubmit" onMouseClicked="#clearPassword" prefHeight="50.0" prefWidth="250.0" promptText="Password">
            <font><Font size="18.0" /></font>
         </PasswordField>

         <Button fx:id="loginBtn" layoutX="566.0" layoutY="469.0" onAction="#handleLogin" text="Login">
            <font><Font size="18.0" /></font>
         </Button>

         <Button fx:id="newusers" layoutX="500.0" layoutY="524.0" onAction="#handleNewUsers" prefHeight="35.0" prefWidth="200.0" text="New users click here!">
            <font><Font size="18.0" /></font>
         </Button>

         <Label fx:id="signInErrorLabel" alignment="CENTER" layoutX="370.0" layoutY="570.0" prefWidth="460.0" textAlignment="CENTER" textFill="RED" />

      </AnchorPane>
   </Group>

</StackPane>
